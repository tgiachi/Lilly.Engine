{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../src/",
          "files": ["**/*.csproj"]
        }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "net10.0"
	  }
    }
  ],
  "build": {
    "content": [
      {
        "files": ["**/*.{md,yml}"],
        "exclude": ["_site/**"]
      }
    ],
    "resource": [
      {
        "files": ["images/**"]
      }
    ],
    "output": "_site",
    "template": ["default", "modern"],
    "globalMetadata": {
      "_appName": "Lilly Engine",
      "_appTitle": "Lilly Engine",
      "_enableSearch": true,
      "pdf": false
    }
  }
}
